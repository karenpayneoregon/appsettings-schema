{
  "id": "http://www.karenpayne.com/ticketsystem",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Customer Information Request",
  "version": "1.0.0",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "Id": {
        "type": "integer",
        "title": "Primary key",
        "description": "Primary key"
      },
      "Code": {
        "type": "string",
        "description": "Auto-generated code",
        "pattern": "^[A-Z][0-9]{3}$",
        "default": "A000"
      },
      "CompanyName": {
        "type": "string",
        "minLength": 3,
        "maxLength": 100,
        "pattern": "^[A-Za-z\\s]*$",
        "description": "Company letters only",
        "title": "Company name"
      }
    },
    "required": [
      "Id",
      "CompanyName",
      "Code"
    ],
    "additionalProperties": false
  }
}